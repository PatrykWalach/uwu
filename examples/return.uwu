def add_one(x) do
    x + 1
end

def map<T, R>(arr: Array<T>, func: Callable<T, R>): Array<R> do
    `arr.map(func)`
end

def filter<T>(arr: Array<T>, func: Callable<T, Bool>): Array<T> do
    `arr.filter(func)`
end

